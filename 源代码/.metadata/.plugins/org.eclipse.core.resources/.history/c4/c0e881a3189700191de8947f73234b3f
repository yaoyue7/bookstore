<script type="text/javascript">
	function check(){
		if("0".equals(${flag})){
			alert("密码检验错误，请重新输入！")
		}
		if("1".equals(${flag})){
			alert("注册成功，请登录！")
		}
		if("2".equals(${flag})){
			alert("用户名已经存在，请直接登录！")
		}
	}
</script>

